# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_here

# Gemini AI API Keys
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_INTERVIEWER_API_KEY=your_gemini_api_key_here

# Agora.io Configuration (for video interviews)
NEXT_PUBLIC_AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_certificate
AGORA_CUSTOMER_ID=your_customer_id
AGORA_CUSTOMER_SECRET=your_customer_secret
AGORA_RECORDING_BUCKET=your_recording_bucket_name

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Email Configuration (for OTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# MEGA Cloud Storage (for recording storage)
MEGA_EMAIL=your_mega_email@example.com
MEGA_PASSWORD=your_mega_password

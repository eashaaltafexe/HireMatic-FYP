{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/data-access": ["./src/layers/1-data-access"],
      "@/data-access/*": ["./src/layers/1-data-access/*"],
      "@/business-logic": ["./src/layers/2-business-logic"],
      "@/business-logic/*": ["./src/layers/2-business-logic/*"],
      "@/application": ["./src/layers/3-application"],
      "@/application/*": ["./src/layers/3-application/*"],
      "@/presentation": ["./src/layers/4-presentation"],
      "@/presentation/*": ["./src/layers/4-presentation/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "backup-deleted-files/**/*"]
}
